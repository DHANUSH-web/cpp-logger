{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "cpplogger-win32-release",
            "hidden": false,
            "description": "Default release configuration for Windows",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/out",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "C:/msys64/clang64/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "C:/msys64/clang64/bin/clang++.exe",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "cpplogger-win32-debug",
            "hidden": false,
            "description": "Default debug configuration for Windows",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/out",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "C:/msys64/clang64/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "C:/msys64/clang64/bin/clang++.exe",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "cpplogger-unix-release",
            "hidden": false,
            "description": "Default release configuration for Unix",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/out",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "cpplogger-unix-debug",
            "hidden": false,
            "description": "Default debug configuration for Unix",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/out",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        }
    ]
}